<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        xmlns:ViewModels="clr-namespace:Previewer.ViewModels" x:Class="TestApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Grid.DataContext>
            <ViewModels:MainViewModel/>
        </Grid.DataContext>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="75,88,0,0" TextWrapping="Wrap" Text="{Binding FilePath}" VerticalAlignment="Top"/>

    </Grid>
</Window>
