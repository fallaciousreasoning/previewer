<UserControl x:Class="PreviewerPlugins.ImagePlugin.ImagePreviewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PreviewerPlugins.ImagePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:ImagePreviewViewModel/>
    </UserControl.DataContext>
    
    <Grid>
           <Image Source="{Binding ImageUri}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform"/> 
    </Grid>
</UserControl>
